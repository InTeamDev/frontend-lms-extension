{
  "manifest_version": 3,
  "name": "Текстовый переводчик",
  "version": "1.0",
  "description": "Переводит видео-лекции в текстовый формат",
  "icons": {
    "16": "images/logo16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/logo128.png"
  },
  "content_scripts": [
    {
      "js": ["scripts/content.js"],
      "css": ["styles/style.css"],
      "matches": ["https://lms.utmn.ru/*"]
    }
  ]
}
